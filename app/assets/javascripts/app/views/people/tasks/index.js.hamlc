%table.datatable
  %thead
    %tr
      %th= I18n.t('common.id')
      %th= I18n.t('common.date')
      %th= I18n.t('task.views.duration')
      %th= I18n.t('task.views.description')

  %tbody
    - for task in App.PersonTask.all()
      %tr{:data-id => task.id, :class => 'item'}
        %td= task.id
        %td= task.start_date
        %td
          = task.duration + " min"
          %br
          = "(#{task.duration_in_words})"
        %td
          %b= task.owner_name
          \-
          %i= task.affair_title
          %br
          != task.description.replace(/\n/g, '<br/>')
