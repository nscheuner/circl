%nav.navbar.navbar-default.navbar-static-top.navbar-inverse{:role => "navigation"}
  .row
    .navbar-header.col-md-1
      %span{:class => 'navbar-brand', :style => 'padding: 0 0 0 15px'}
        = image_tag 'logo_mini_white.png'

    .navbar-brand.col-md-11
      = I18n.t('person.views.change_password')

.container
  .panel.panel-default
    .panel-heading
      .panel-title
        = I18n.t('devise.views.change_your_password')

    .panel-body
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
        .row
          .col-lg-3
          .col-lg-6
            - error_messages_for(resource)
            - flash_messages
            = f.hidden_field :reset_password_token
          .col-lg-3

        .row
          .col-lg-3
          .col-lg-6
            .form-group
              = f.label I18n.t('devise.views.new_password'), :for => 'person_password'
              .pull-right
                #password_strength.label
              = f.password_field :password, :class => "strong_password form-control"

            .form-group
              = f.label I18n.t('devise.views.confirm_new_password'), :for => 'person_password_confirmation'
              = f.password_field :password_confirmation, :class => 'form-control'

            .pull-right
              = f.submit I18n.t('devise.views.change_my_password'), :class => 'btn btn-primary'

          .col-lg-3
