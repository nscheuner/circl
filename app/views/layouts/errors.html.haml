!!! 5
%html{:lang => I18n.locale}
  %head
    %meta{"http-equiv" => "content-type", :content => "text/html;charset=UTF-8"}
    /= TODO: insert company name here
    %title= "CIRCL" # + controller.controller_name + "/" + controller.action_name
    = favicon_link_tag
    = stylesheet_link_tag 'main'
    = javascript_include_tag "i18n.js" # part of i18n-js gem
    = javascript_include_tag "i18n/#{I18n.locale}.js"
    = javascript_include_tag 'application'
    = csrf_meta_tag

    :javascript
      Spine.Model.host = '#{request.protocol}#{request.host_with_port}';

  %body
    = hidden_field_tag 'session-remaining-time', Devise.timeout_in + 5.seconds
    #wrap
      = render :partial => 'layouts/header'

      #content_container
        ~ yield

      = render :partial => 'layouts/footer'

    #dialogs
