!!! 5
%html
  %head
    %meta{"http-equiv" => "content-type", content: "text/html;charset=UTF-8"}
    = stylesheet_link_tag 'mail'

  :css
    body {
      margin: 0;
      background-color: #383838;
      color: #fff;
      font-family: 'Open Sans', "Arial", "sans-serif";
    }
    a {
      color: #aaa;
    }
    header, footer {
      background-color: #1d1d1d;
      padding: 10px;
    }
    header { height: 30px; }
    footer { font-size: 0.8em; }

    #content_container {
      background-color: #fff;
      color: #000;
      padding: 10px;
    }

    h1 {
      font-size: 2em;
      padding: 10px 0;
      text-shadow: 0 2px 2px rgba(0, 0, 0, .1);
    }
    h2 {
      font-size: 1.2em;
      margin: 10px 0;
    }

    .logo {
      width: 150px;
      float: left;
      padding: 3px 0;
    }
    .logo img {
      height: 25px;
      padding: 0 5px 0 15px;
      vertical-align: top;
    }
    .logo .title {
      display: inline;
      font-size: 25px;
      color: #fff;
      text-shadow: 0 2px 2px rgba(1, 1, 1, 0.5);
    }

    table {
      border: none;
      cellspacing: 0;
      cellpadding: 0;
      border-collapse: collapse;
      background-color: #fff;
      color: #000;
      font-size: 0.9em;
    }
    table thead tr {
      background-color: #5b5b5b;
      color: #d3d3d3;
    }
    table tbody tr:nth-child(2n+1) {
      background-color: #eee;
    }
    td {
      text-align: left;
      vertical-align: top;
    }
  %body
    #wrap
      %header
        .logo
          = image_tag 'https://assets.circl.ch/images/logo_mini_white.png', alt: " "
          .title CIRCL

      #content_container
        ~ yield

      %footer
        = I18n.t("common.a_webapp_developped_by")
        = link_to "Complex IT s√†rl", "http://www.complex.ch"
        ,
        = I18n.t("common.released_under")
        = link_to "GNU Affero General Public License", "http://www.gnu.org/licenses/agpl.html"
        %br
        - if ApplicationSetting.value(:application_id)
          = I18n.t("common.this_application_unique_id")
          %b
            = ApplicationSetting.value(:application_id)
