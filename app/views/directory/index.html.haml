.row
  .col-lg-12
    #secondary_navigation.navbar.navbar-default.navbar-static-top
      .container
        .collapse.navbar-collapse
          .navbar-right.btn-group
            - if can? :create, Person
              %a{ :href => directory_mailchimp_path,
                  :class => 'btn btn-default navbar-btn',
                  :id => 'directory-add-person' }
                .icon-user
                = I18n.t('directory.views.add_person')

            - if can? :mailchimp, Directory
              %a{ :href => '#',
                  :class => 'btn btn-danger navbar-btn',
                  :method => :post,
                  :confirm => I18n.t('common.are_you_sure'),
                  :id => 'directory-add-person' }
                .icon-refresh
                = I18n.t('directory.views.sync_mailchimp')

.container
  .panel.panel-default
    - if flash[:error] or flash[:alert] or flash[:notice]
      .panel-body
        .row
          .col-lg-12
            - flash_messages

    #search_form

    .panel-body
      .row
        .col-lg-12
          %h2= I18n.t('directory.views.results')
          %input{ :id => "json_query",
                  :name => "json_query",
                  :type => "hidden",
                  :value => @query.to_json.html_safe }

    %table#results.table
      %thead
        %tr
          - @query[:selected_attributes].each do |field|
            %th= field
          %th score

    .panel-footer
      %button{:type => 'button',
              :class => 'btn btn-default',
              :name => 'directory-export-csv'}
        .icon-cloud-download
        = I18n.t('common.export_to') + " CSV"
